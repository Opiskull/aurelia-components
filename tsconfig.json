{
    "compilerOptions": {
        "target": "es5",
        "module": "es2015",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "strictNullChecks": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "allowJs": true,
        "lib": [
            "es2017", "dom"
        ]
    },
    "awesomeTypescriptLoaderOptions": {
        "forkChecker": true
    },
    "exclude": [
        "node_modules",
        "dist"
    ]
}